.header
    max-width: viewport
    padding: 0 10px 0 0

    &-container
        background: #fff

.head-alert
    height: 40px
    border-bottom: solid 1px #f5f5f5
    text-align: center
    font-size: 13px
    font-weight: regular
    color: #a7a7a7
    display: flex
    justify-content: center
    align-items: center

    i
        color: #e44f6b

@media (min-width: 569px)
    .header
        padding: 16px 10px 0 0

@media (min-width: 992px)
    .header
        padding: 16px 16px 0

@media (min-width: (viewport + 32))
    .header
        padding: 16px 0 0